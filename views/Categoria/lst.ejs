<%-include('../cabecalho.ejs')%>
    <h1 style="text-align:center; margin-bottom:32px; color:#333;">Curso</h1>
    <a href="/Restaurante/add" class="btn add" style="margin-bottom:32px;">Adicionar curso</a>
    <table class="curso-table" style="margin-top:24px;">
        <thead>
            <tr style="background:#e9ecef; color:#333;">
                <th>Nome</th>
                <th colspan="2" style="text-align:center;">Ações</th>
            </tr>
        </thead>
        <tbody>
            <%for (const{nome,id} of Categorias) {%>
                <tr>
                    <td>
                        <%=nome%>
                    </td>
                    <td>
                        <%=id%>
                    </td>
                    <td><a href="/Categoria/edt/<%=id%>" class="btn edit"><i class="fa-solid fa-pen">‌</i>&nbsp;Editar
                            curso</a></td>
                    <td><a href="/Categoria/del/<%=id%>" class="btn delete"
                            onclick="return confirm('Tem certeza que deseja excluir este curso?')"><i
                                class="fa-solid fa-box-archive">‌</i>&nbsp;Excluir curso</a></td>
                </tr>
                <%}%>
        </tbody>
    </table>

    <%-include('../rodape.ejs')%>