<%- include('../cabecalho.ejs') %>

<h1>Editar Bebida</h1>

<div style="margin-bottom: 24px;">
    <a href="/Bebida/lst" class="btn" style="background:#c49b63;">Voltar à Lista</a>
</div>

<div class="form-card">
    <form method="post">

        <div class="form-group">
            <label>ID:</label>
            <input type="text" value="<%= Bebida._id %>" disabled>
        </div>

        <div class="form-group">
            <label>Nome:</label>
            <input type="text" name="nome" value="<%= Bebida.nome %>" required>
        </div>

        <div class="form-group">
            <label>Descrição:</label>
            <input type="text" name="descricao" value="<%= Bebida.descricao %>">
        </div>

        <div class="form-group">
            <label>Preço:</label>
            <input type="number" name="preco" step="0.01" value="<%= Bebida.preco %>" required>
        </div>

        <button type="submit" class="btn submit">Salvar Alterações</button>
    </form>
</div>

<%- include('../rodape.ejs') %>
