<%- include('../cabecalho.ejs') %>

<h1>Editar Bebida</h1>
<div style="margin-bottom: 24px;">
    <a href="/Bebida/lst" class="btn">Listar</a>
</div>
<form method="post">
    <label>ID:</label>
    <input type="text" value="<%= Bebida._id %>" disabled><br>

    <label>Nome:</label>
    <input type="text" name="nome" value="<%= Bebida.nome %>" required><br>

    <label>Descrição:</label>
    <input type="text" name="descricao" value="<%= Bebida.descricao %>"><br>

    <label>Preço:</label>
    <input type="number" name="preco" step="0.01" value="<%= Bebida.preco %>" required><br>

    <button type="submit" class="btn submit">Submeter edição</button>
</form>

