<%- include('../cabecalho.ejs') %>

<h1>Editar Prato</h1>

<div style="margin-bottom: 24px;">
    <a href="/Prato/lst" class="btn" style="background:#c49b63;">Voltar à Lista</a>
</div>

<div class="form-card">

    <form action="/Prato/edt/<%= Prato.id %>" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label>ID:</label>
            <input type="text" value="<%= Prato.id %>" disabled>
        </div>

        <div class="form-group">
            <label>Nome do prato:</label>
            <input type="text" name="nome" value="<%= Prato.nome %>" required>
        </div>

        <div class="form-group">
            <label>Descrição:</label>
            <textarea name="descricao" rows="3" required><%= Prato.descricao %></textarea>
        </div>

        <div class="form-group">
            <label>Preço (R$):</label>
            <input type="number" name="preco" step="0.01" value="<%= Prato.preco %>" required>
        </div>

        <div class="form-group">
            <label>Categoria:</label>
            <input type="text" name="categoria" value="<%= Prato.categoria %>" required>
        </div>

        <div class="form-group">
            <label>Imagem do prato (atualize se quiser):</label>
            <input type="file" name="imagem" accept="image/*">
        </div>

        <button type="submit" class="btn submit">Salvar Alterações</button>
    </form>

</div>

<%- include('../rodape.ejs') %>
