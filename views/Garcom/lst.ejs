<%- include('../cabecalho.ejs') %>

<h1 style="text-align:center; margin-bottom:32px; color:#333;">Garçons</h1>
<a href="/Garcom/add" class="btn add" style="margin-bottom:32px;">Adicionar Garçom</a>

<table class="curso-table" style="margin-top:24px;">
    <thead>
        <tr style="background:#e9ecef; color:#333;">
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Turno</th>
            <th>Salário</th>
            <th>Notas do admin</th>
            <th>ID</th>
            <th colspan="2" style="text-align:center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        <form method="post">
            <label>Nome do garçom:</label>
            <input type="text" name="garcom"><br>
            <button type="submit" class="btn submit">Procurar</button>
        </form>

        <% for (const g of Garcons) { %>
            <tr>
                <td><%= g.nome %></td>
                <td><%= g.telefone %></td>
                <td><%= g.email %></td>
                <td><%= g.turno %></td>
                <td>R$ <%= g.salario.toFixed(2) %></td>
                <td><%= g.adminNotes %></td>
                <td><%= g._id %></td>
                <td>
                    <a href="/Garcom/edt/<%= g._id %>" class="btn edit">
                        <i class="fa-solid fa-pen"></i>&nbsp;Editar
                    </a>
                </td>
                <td>
                    <a href="/Garcom/del/<%= g._id %>" class="btn delete"
                        onclick="return confirm('Tem certeza que deseja excluir este garçom?')">
                        <i class="fa-solid fa-box-archive"></i>&nbsp;Excluir
                    </a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

<%- include('../rodape.ejs') %>
